        <item name="pageColor">@color/colorPageNight</item>
        <item name="textOnlyTextColor">@color/textOnlyTextColorNight</item>
        <item name="recyclerViewItemBackgroundColor">@color/recyclerViewItemBackgroundColorNight
        </item>
        <item name="titleBarTextColor">@color/textOnlyTextColorNight</item>
        <item name="titleBarHintColor">@color/nightDefaultSecondaryTextColor</item>
    </style>

    <style name="AppThemeExtraNight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryExtraNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkExtraNight</item>
