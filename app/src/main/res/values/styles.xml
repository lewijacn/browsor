        </item>
        <item name="titleBarTextColor">@color/textOnlyTextColorExtraNight</item>
        <item name="titleBarHintColor">@color/nightDefaultSecondaryTextColor</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/nightDefaultPrimaryDark</item>
        <item name="android:navigationBarColor">@color/nightDefaultPrimaryDark</item>
    </style>

    <style name="AppThemeDay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_AppCompat_Light_Dialog_Delete" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme_AppCompat_Dialog_Delete" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
